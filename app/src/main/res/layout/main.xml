            android:id="@+id/button20" android:layout_column="4" android:layout_weight="1"/>
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button21" android:layout_column="5" android:layout_weight="1"/>
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button22" android:layout_column="6" android:layout_weight="1"/>
    </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
